{
  "manifest_version": 2,
  "name": "Pixiv Art Downloader",
  "version": "1.2.4",
  "description": "Downloads art from Pixiv artists with one click! Supports albums and single images.",

  "icons": {
    "48": "icons/megumin-48.png",
    "128": "icons/megumin-128.png"
  },

  "options_ui": {
    "page": "src/options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://www.pixiv.net/*"],
      "js": ["src/content.js"]
    }
  ],

  "background": {
    "scripts": [
      "src/background.js",
      "src/options.js"
    ]
	},

  "page_action": {
    "default_icon": "icons/megumin-128.png"
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "downloads",
    "notifications",
    "storage",
    "tabs",
    "*://www.pixiv.net/*",
    "*://i.pximg.net/*"
  ],

  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Command+Shift+V"
      }
    }
  } 
}