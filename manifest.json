{
  "manifest_version": 2,
  "name": "Pixiv Album Downloader",
  "version": "1.0.0",
  "description": "Downloads the entire album of art from the Pixiv album page.",
  "content_scripts": [
    {
      "matches": ["http://www.pixiv.net/*", "https://www.pixiv.net/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
	},
  "browser_action": {
    "default_icon": "megumin.png"
	},
  "permissions": [
    "downloads",
    "tabs",
    "activeTab",
    "http://*/",
    "https://*/"]
}